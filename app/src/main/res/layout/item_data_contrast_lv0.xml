<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <include android:id="@+id/head" layout="@layout/item_data_contrast_head"/>
    <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/head"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="28"/>

    <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/head"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="实力指数"/>

    <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/head"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="72"/>

    <View android:layout_marginTop="10dp" android:layout_below="@id/tv3" android:background="@color/colorPrimary"
          android:id="@+id/view1" android:layout_width="match_parent" android:layout_height="10dp"/>

    <View android:id="@+id/view2" android:layout_marginTop="10dp" android:layout_below="@id/view1" android:layout_width="match_parent"
          android:layout_height="0.1dp" android:background="@color/colorLine"/>
    <android.support.v7.widget.RecyclerView android:id="@+id/rv" android:layout_below="@id/view2" android:layout_width="match_parent"
                                            android:layout_height="wrap_content" tools:listitem="@layout/item_data_contrast_lv0_block">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>