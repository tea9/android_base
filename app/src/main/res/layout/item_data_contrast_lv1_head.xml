<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <include android:id="@+id/head" layout="@layout/item_data_contrast_head"/>

    <View android:id="@+id/view1" android:layout_marginRight="20dp" android:layout_below="@id/head" android:layout_width="100dp" android:layout_height="100dp"
          android:background="@color/colorAccent" android:layout_toLeftOf="@id/tv1"/>
    <View android:id="@+id/view2" android:layout_marginLeft="20dp" android:layout_below="@id/head" android:layout_width="100dp" android:layout_height="100dp"
          android:background="@color/colorAccent" android:layout_toRightOf="@id/tv1" />

    <TextView android:id="@+id/tv1" android:layout_below="@id/head" android:layout_width="wrap_content" android:gravity="center_vertical" android:layout_height="100dp"
              android:text="控球率" android:layout_centerHorizontal="true"/>


    <View android:id="@+id/view3" android:layout_marginTop="10dp"
          android:layout_below="@id/view1" android:layout_width="match_parent"
          android:layout_height="0.1dp" android:background="@color/colorLine"/>

</RelativeLayout>